<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra externa para simular la profundidad -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Color de la sombra -->
            <corners android:radius="45dp"/> <!-- Radio mayor para simular el borde del dispositivo -->
        </shape>
    </item>

    <!-- Borde del dispositivo -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color del borde del dispositivo -->
            <corners android:radius="40dp"/> <!-- Radio del borde -->
            <stroke android:width="3dp" android:color="#B0BEC5"/> <!-- Borde del dispositivo -->
        </shape>
    </item>

    <!-- Fondo de la pantalla -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#B0B0B0"/> <!-- Color del fondo de la pantalla -->
            <corners android:radius="35dp"/> <!-- Radio interno para la pantalla -->
        </shape>
    </item>

</layer-list>
